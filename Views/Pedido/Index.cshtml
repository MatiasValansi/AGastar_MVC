@model List<Pedido>
@{
    ViewData["Title"] = "Lista de pedidos";
}
<div class="container my-5">
    <h1 class="text-center mb-4">Lista de Pedidos</h1>

    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-end">
            <a class="btn btn-primary btn-lg" asp-controller="Pedido" asp-action="Crear"> <!--Invoca al metodo Crear de PedidosController-->
                <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Pedido
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Titulo</th>
                                    <th scope="col">Fecha</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if(Model != null && Model.Count > 0)
                                        foreach(var p in Model)
                                        {
                                            <tr>
                                                <th scope="row">@p.PedidoId</th>
                                                <td>@p.Titulo</td>
                                                <td>@p.Fecha.ToString("dd/MM/yyyy")</td>
                                                <td>$ @p.Total</td>
                                                <td>
                                                                                                                                                 <!-- Crear `MostrarDetalle` en PedidoController -->
                                                    <a class="btn btn-sm btn-outline-primary me-1" title="Ver detalles" asp-controller="Detalles" asp-action="MostrarDetalle">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <form asp-controller="Pedido" asp-action="Eliminar" asp-route-id="@p.PedidoId" style="display: inline;">
                                                        <button class="btn btn-sm btn-outline-danger" title="Eliminar" type="submit">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">
                                                No hay ningún pedido. <a asp-controller="Pedido" asp-action="Crear">Crea uno!</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>