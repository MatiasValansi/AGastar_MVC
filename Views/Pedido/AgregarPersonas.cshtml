@{
    ViewData["Title"] = "Agregar personas";
    List<Persona> personas = ViewBag.personas;
}

<div class="container my-5">
    @if (ViewBag.Error != null) 
    {
        <div class="alert alert-danger">
            <strong>Ooops</strong> algo salió mal. @ViewBag.Error .
        </div>
    }
    <h1 class="text-center mb-4">Agrega a los participantes</h1>
    <div class="row justify-content-center">
        <div class="card shadow-sm">
            <div class="p-2 align-self-end">
                <button class="btn btn-outline-secondary">Omitir</button>
            </div>
            <div class="card-body">
                <form id="pedidoForm" method="post" enctype="multipart/form-data" asp-controller="Pedido" asp-action="Crear" class="d-flex flex-column gap-4">
                    <div class="mb-3">
                        <label for="Nombre" class="form-label">Nombre</label>
                        <div class="d-flex">
                            <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Pepe..." required>
                            <button type="submit" class="btn btn-success btn-md" asp-controller="Pedido" asp-action="AgregarPersona">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                        </div>

                    </div>
                    <div class="d-flex flex-column justify-content-start gap-2">
                        @{
                            if (personas != null && personas.Count > 0)
                            {
                                foreach (Persona cadaPersona in personas)
                                {
                                    <div class="d-flex justify-content-between align-items-center" style="border: 1px solid rgba(0,0,0,.100)">
                                        <span class="p-1">@cadaPersona.Nombre</span>
                                        <button id="eliminar" class="btn btn-md btn-outline-danger" title="Eliminar" asp-controller="Pedido" asp-action="EliminarPersona">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                }                                
                            }
                        }
                    </div>

                    <div class="align-self-end">
                        <a asp-controller="Pedido" asp-action="Detalle" class="btn btn-success">Finalizar</a>
                    </div>

                    <input type="hidden" name="PedidoId" value="@ViewBag.pedido.PedidoId" />
                </form>
            </div>
        </div>
    </div>

</div>